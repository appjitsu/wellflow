{
  "name": "api",
  "version": "0.0.2",
  "description": "WellFlow API",
  "author": "WellFlow Team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typecheck": "tsc --noEmit --pretty",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings=0",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "security:audit": "pnpm audit --audit-level moderate || pnpm audit --audit-level high --prod",
    "security:scan": "pnpm run lint",
    "security:dependencies": "pnpm audit --audit-level moderate --json > security-audit.json || true",
    "security:secrets": "gitleaks detect --no-banner --redact",
    "security:sast": "pnpm run lint",
    "security:comprehensive": "pnpm run security:audit && pnpm run security:dependencies && pnpm run security:secrets",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "test:db": "jest --config jest.config.database.js --runInBand",
    "test:all": "pnpm run test && pnpm run test:db && pnpm run test:e2e",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:push": "drizzle-kit push --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "dev:setup": "./scripts/dev-setup.sh",
    "dev:services:start": "docker-compose up -d",
    "dev:services:stop": "docker-compose down",
    "ci:check": "pnpm run format:check && pnpm run lint && pnpm run typecheck && pnpm run test:cov",
    "ci:security": "pnpm run security:comprehensive"
  },
  "dependencies": {
    "@bull-board/api": "6.13.0",
    "@bull-board/express": "6.13.0",
    "@casl/ability": "^6.7.3",
    "@maxmind/geoip2-node": "6.1.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "6.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "11.0.0",
    "@nestjs/throttler": "6.4.0",
    "@sentry/nestjs": "^10.12.0",
    "@sentry/node": "^10.12.0",
    "@swc/helpers": "0.5.17",
    "axios": "1.12.2",
    "bullmq": "5.58.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "drizzle-orm": "0.44.5",
    "ioredis": "5.8.0",
    "load-ip-set": "3.0.1",
    "logrocket": "^10.1.0",
    "nest-commander": "3.20.0",
    "node-cron": "4.2.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "postgres": "3.4.7",
    "redis": "^5.8.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sanitize-html": "^2.17.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.36.0",
    "@faker-js/faker": "10.0.0",
    "@jest/globals": "30.1.2",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@repo/typescript-config": "workspace:*",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/ioredis": "5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.5",
    "@types/sanitize-html": "2.16.0",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "0.31.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-secrets": "2.2.1",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.44.0"
  },
  "jest": {
    "displayName": "WellFlow API",
    "globalSetup": "../../jest.global-setup.js",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.(spec|test)\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/database/__tests__/"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@/application/(.*)$": "<rootDir>/src/application/$1",
      "^@/domain/(.*)$": "<rootDir>/src/domain/$1",
      "^@/infrastructure/(.*)$": "<rootDir>/src/infrastructure/$1",
      "^@/presentation/(.*)$": "<rootDir>/src/presentation/$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json",
          "transpilation": true
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "!src/**/*.d.ts",
      "!src/**/*.config.ts",
      "!src/**/*.module.ts",
      "!src/main.ts",
      "!src/test/**",
      "!src/**/__tests__/**",
      "!src/**/*.spec.ts",
      "!src/**/*.test.ts"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "html",
      "json",
      "json-summary",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/../../jest.setup.js"
    ],
    "testTimeout": 30000,
    "verbose": true,
    "clearMocks": true,
    "restoreMocks": true,
    "forceExit": true,
    "detectOpenHandles": false
  }
}
