{
  "name": "api",
  "version": "0.0.2",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "check-types": "tsc --noEmit",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:audit:lenient": "pnpm audit --audit-level high --prod || echo 'Security audit completed with warnings'",
    "security:check": "pnpm run security:audit:lenient && pnpm run lint",
    "security:test": "pnpm run security:audit && pnpm run lint",
    "security:scan": "eslint \"{src,apps,libs,test}/**/*.ts\" --config eslint.config.mjs",
    "security:dependencies": "pnpm audit --audit-level moderate --json > security-audit.json || true",
    "security:comprehensive": "pnpm run security:test && pnpm run security:dependencies",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:db": "jest --config jest.config.database.js",
    "test:db:watch": "jest --config jest.config.database.js --watch",
    "test:db:coverage": "jest --config jest.config.database.js --coverage",
    "test:db:setup": "node -e \"require('./src/database/__tests__/setup.ts').globalSetup()\"",
    "test:db:teardown": "node -e \"require('./src/database/__tests__/setup.ts').globalTeardown()\"",
    "test:all": "pnpm run test && pnpm run test:db && pnpm run test:e2e",
    "test:jobs": "jest --testPathPatterns=jobs",
    "test:jobs:watch": "jest --testPathPatterns=jobs --watch",
    "test:jobs:coverage": "jest --testPathPatterns=jobs --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "dev:setup": "./scripts/dev-setup.sh",
    "dev:services:start": "docker-compose up -d",
    "dev:services:stop": "docker-compose down"
  },
  "dependencies": {
    "@bull-board/api": "6.13.0",
    "@bull-board/express": "6.13.0",
    "@casl/ability": "^6.7.3",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "6.4.0",
    "@sentry/nestjs": "^10.12.0",
    "@sentry/node": "^10.12.0",
    "@swc/helpers": "0.5.17",
    "bullmq": "5.58.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "drizzle-orm": "0.44.5",
    "ioredis": "5.8.0",
    "logrocket": "^10.1.0",
    "nest-commander": "3.20.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "postgres": "3.4.7",
    "redis": "^5.8.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.36.0",
    "@faker-js/faker": "10.0.0",
    "@jest/globals": "30.1.2",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@repo/typescript-config": "workspace:*",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/ioredis": "5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "0.31.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-secrets": "2.2.1",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.44.0"
  },
  "jest": {
    "displayName": "WellFlow API",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.(spec|test)\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/database/__tests__/"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "transpilation": true
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.d.ts",
      "!**/*.config.ts",
      "!**/*.module.ts",
      "!**/main.ts",
      "!**/test/**",
      "!**/__tests__/**",
      "!**/*.spec.ts",
      "!**/*.test.ts"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "html",
      "json",
      "json-summary",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/../jest.setup.js"
    ],
    "testTimeout": 30000,
    "verbose": true,
    "clearMocks": true,
    "restoreMocks": true,
    "forceExit": true,
    "detectOpenHandles": false
  }
}
