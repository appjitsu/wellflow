{
  "extends": "@repo/typescript-config/node.json",
  "compilerOptions": {
    "baseUrl": "./",
    "removeComments": true,
    "paths": {
      "@/*": ["src/*"],
      "@/application/*": ["src/application/*"],
      "@/domain/*": ["src/domain/*"],
      "@/infrastructure/*": ["src/infrastructure/*"],
      "@/presentation/*": ["src/presentation/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist", "coverage"]
}
