{
  "name": "web",
  "version": "0.1.2",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port ${NEXT_PUBLIC_PORT:-3000}",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p ${PORT:-3000}",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:audit:lenient": "pnpm audit --audit-level high --prod || echo 'Security audit completed with warnings'",
    "security:check": "pnpm run security:audit:lenient && pnpm run lint",
    "security:test": "pnpm run security:audit && pnpm run lint",
    "security:scan": "eslint . --max-warnings 0",
    "security:dependencies": "pnpm audit --audit-level moderate --json > security-audit.json || true",
    "security:comprehensive": "pnpm run security:test && pnpm run security:dependencies",
    "accessibility:test": "echo 'Running accessibility tests...' && node ../../scripts/accessibility-test.js",
    "accessibility:axe": "axe http://localhost:3000 --reporter json --output accessibility-axe-report.json || true",
    "accessibility:pa11y": "pa11y http://localhost:3000 --standard WCAG2AA --reporter json --output accessibility-pa11y-report.json || true",
    "accessibility:lighthouse": "lighthouse http://localhost:3000 --only-categories=accessibility --output=json --output-path=accessibility-lighthouse-report.json || true",
    "accessibility:comprehensive": "pnpm run accessibility:test && pnpm run accessibility:axe && pnpm run accessibility:pa11y",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@casl/react": "^5.0.0",
    "@hookform/resolvers": "5.2.2",
    "@radix-ui/react-accordion": "1.2.12",
    "@radix-ui/react-alert-dialog": "1.1.15",
    "@radix-ui/react-aspect-ratio": "1.1.7",
    "@radix-ui/react-avatar": "1.1.10",
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-collapsible": "1.1.12",
    "@radix-ui/react-context-menu": "2.2.16",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-hover-card": "1.1.15",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-menubar": "1.1.16",
    "@radix-ui/react-navigation-menu": "1.2.14",
    "@radix-ui/react-popover": "1.1.15",
    "@radix-ui/react-progress": "1.1.7",
    "@radix-ui/react-radio-group": "1.3.8",
    "@radix-ui/react-scroll-area": "1.2.10",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-separator": "1.1.7",
    "@radix-ui/react-slider": "1.3.6",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-switch": "1.2.6",
    "@radix-ui/react-tabs": "1.1.13",
    "@radix-ui/react-toggle": "1.1.10",
    "@radix-ui/react-toggle-group": "1.1.11",
    "@radix-ui/react-tooltip": "1.2.8",
    "@repo/ui": "workspace:*",
    "@sentry/nextjs": "^10.12.0",
    "@swc/helpers": "0.5.17",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "date-fns": "4.1.0",
    "embla-carousel-react": "8.6.0",
    "input-otp": "1.4.2",
    "logrocket": "^10.1.0",
    "logrocket-react": "6.0.3",
    "lucide-react": "0.544.0",
    "next": "^15.5.3",
    "next-themes": "0.4.6",
    "react": "^19.1.1",
    "react-day-picker": "9.11.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "7.63.0",
    "react-resizable-panels": "3.0.6",
    "recharts": "2.15.4",
    "sonner": "2.0.7",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7",
    "vaul": "1.1.2",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@playwright/test": "1.55.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "autoprefixer": "10.4.21",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "5.9.2"
  }
}
