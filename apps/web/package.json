{
  "name": "web",
  "version": "0.1.2",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port ${NEXT_PUBLIC_PORT:-3000}",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p ${PORT:-3000}",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:audit:lenient": "pnpm audit --audit-level high --prod || echo 'Security audit completed with warnings'",
    "security:check": "pnpm run security:audit:lenient && pnpm run lint",
    "security:test": "pnpm run security:audit && pnpm run lint",
    "security:scan": "eslint . --max-warnings 0",
    "security:dependencies": "pnpm audit --audit-level moderate --json > security-audit.json || true",
    "security:comprehensive": "pnpm run security:test && pnpm run security:dependencies",
    "accessibility:test": "echo 'Running accessibility tests...' && node ../../scripts/accessibility-test.js",
    "accessibility:axe": "axe http://localhost:3000 --reporter json --output accessibility-axe-report.json || true",
    "accessibility:pa11y": "pa11y http://localhost:3000 --standard WCAG2AA --reporter json --output accessibility-pa11y-report.json || true",
    "accessibility:lighthouse": "lighthouse http://localhost:3000 --only-categories=accessibility --output=json --output-path=accessibility-lighthouse-report.json || true",
    "accessibility:comprehensive": "pnpm run accessibility:test && pnpm run accessibility:axe && pnpm run accessibility:pa11y",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@casl/react": "^5.0.0",
    "@repo/ui": "workspace:*",
    "@sentry/nextjs": "^10.12.0",
    "logrocket": "^10.1.0",
    "logrocket-react": "6.0.3",
    "next": "^15.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.34.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "typescript": "5.9.2"
  }
}
