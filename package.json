{
  "name": "wellflow",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss,html}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:audit:fix": "pnpm audit --fix",
    "security:audit:report": "pnpm audit --json > security-audit-report.json",
    "security:check": "pnpm run security:audit && pnpm run security:licenses",
    "security:licenses": "pnpm licenses list --json > license-report.json",
    "security:outdated": "pnpm outdated --format json > outdated-report.json",
    "sast:semgrep": "semgrep --config=.semgrep.yml --json --output=security-reports/semgrep-results.json .",
    "sast:semgrep:sarif": "semgrep --config=.semgrep.yml --sarif --output=security-reports/semgrep-results.sarif .",
    "sast:scan": "mkdir -p security-reports && pnpm run sast:semgrep && pnpm run sast:semgrep:sarif",
    "sast:check": "pnpm run sast:scan",
    "secrets:gitleaks": "gitleaks detect --config=.gitleaks.toml --report-path=security-reports/gitleaks-report.json .",
    "secrets:scan": "mkdir -p security-reports && pnpm run secrets:gitleaks",
    "secrets:check": "pnpm run secrets:scan"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,yml,yaml,css,scss,html}": [
      "prettier --write"
    ]
  }
}
