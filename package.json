{
  "name": "wellflow",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss,html}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:audit:fix": "pnpm audit --fix",
    "security:audit:report": "pnpm audit --json > security-audit-report.json",
    "security:check": "pnpm run security:audit && pnpm run security:licenses",
    "security:licenses": "pnpm licenses list --json > license-report.json",
    "security:outdated": "pnpm outdated --format json > outdated-report.json",
    "sast:semgrep": "/Users/jason/.local/bin/semgrep --config=.semgrep.yml --json --output=security-reports/semgrep-results.json .",
    "sast:semgrep:sarif": "/Users/jason/.local/bin/semgrep --config=.semgrep.yml --sarif --output=security-reports/semgrep-results.sarif .",
    "sast:scan": "mkdir -p security-reports && pnpm run sast:semgrep && pnpm run sast:semgrep:sarif",
    "sast:check": "pnpm run sast:scan",
    "secrets:gitleaks": "gitleaks detect --config=.gitleaks.toml --report-path=security-reports/gitleaks-report.json .",
    "secrets:scan": "mkdir -p security-reports && pnpm run secrets:gitleaks",
    "secrets:check": "pnpm run secrets:scan",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:coverage:watch": "turbo run test:coverage:watch",
    "test:ci": "turbo run test:ci",
    "test:api": "cd apps/api && pnpm test",
    "test:web": "cd apps/web && pnpm test",
    "test:api:coverage": "cd apps/api && pnpm test:coverage",
    "test:web:coverage": "cd apps/web && pnpm test:coverage",
    "test:coverage:report": "pnpm run test:coverage && open coverage/html-report/index.html",
    "performance:analyze": "pnpm run build && node scripts/performance-analysis.js",
    "performance:budget": "node scripts/check-performance-budget.js",
    "performance:test": "node scripts/performance-test.js",
    "performance:lighthouse": "lhci autorun",
    "performance:report": "mkdir -p performance-reports && pnpm run performance:analyze && pnpm run performance:budget",
    "test:performance": "pnpm run performance:test",
    "accessibility:test": "node scripts/accessibility-test.js",
    "accessibility:axe": "axe http://localhost:3000 --rules-file .axe-rules.json --reporter json",
    "accessibility:pa11y": "pa11y http://localhost:3000 --standard WCAG2AA --reporter json",
    "accessibility:lighthouse": "lighthouse http://localhost:3000 --only-categories=accessibility --output=json",
    "accessibility:report": "mkdir -p accessibility-reports && pnpm run accessibility:test",
    "license:check": "node scripts/license-check.js",
    "license:report": "mkdir -p license-reports && pnpm run license:check",
    "format:check:source": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss,html}\" --ignore-path .prettierignore",
    "quality:check": "pnpm run build && pnpm run lint && pnpm run check-types && pnpm run format:check:source && pnpm run security:check && pnpm run sast:check && pnpm run secrets:check && pnpm run performance:test && pnpm run accessibility:test && pnpm run license:check && pnpm run test:coverage",
    "security:api": "node scripts/api-security-test.js",
    "security:api:report": "mkdir -p security-reports && pnpm run security:api",
    "security:infrastructure": "node scripts/infrastructure-security-scan.js",
    "security:infrastructure:report": "mkdir -p security-reports && pnpm run security:infrastructure",
    "security:full": "pnpm run security:api && pnpm run security:infrastructure && echo 'ðŸ”’ Security testing completed'",
    "security:api:comprehensive": "turbo run security:audit security:check && pnpm run security:api",
    "security:test": "turbo run security:audit security:check",
    "security:test:lenient": "turbo run security:check",
    "security:test:api": "cd apps/api && pnpm run security:audit && pnpm run security:check",
    "security:test:web": "cd apps/web && pnpm run security:audit && pnpm run security:check",
    "security:test:all": "pnpm run security:test && pnpm run sast:check && pnpm run secrets:check",
    "security:test:production": "pnpm audit --prod --audit-level high",
    "accessibility:test:ui": "turbo run accessibility:test",
    "accessibility:test:web": "cd apps/web && pnpm run accessibility:test",
    "accessibility:test:docs": "cd apps/docs && pnpm run accessibility:test",
    "accessibility:test:all": "pnpm run accessibility:test:ui && pnpm run accessibility:report",
    "quality:gates": "pnpm run test && pnpm run security:test:all && pnpm run accessibility:test:all",
    "quality:gates:api": "pnpm run test:api && pnpm run security:test:api",
    "quality:gates:web": "pnpm run test:web && pnpm run security:test:web && pnpm run accessibility:test:web"
  },
  "devDependencies": {
    "@axe-core/cli": "4.10.2",
    "@lhci/cli": "^0.15.1",
    "@types/bcrypt": "6.0.0",
    "@types/passport-local": "1.0.38",
    "axe-core": "4.10.3",
    "glob": "11.0.3",
    "husky": "^9.1.7",
    "lighthouse": "12.8.2",
    "lint-staged": "^16.1.6",
    "pa11y": "9.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,yml,yaml,css,scss,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@tanstack/react-query": "5.90.2",
    "@tanstack/react-query-devtools": "5.90.2",
    "@tanstack/react-table": "8.21.3",
    "bcrypt": "6.0.0",
    "passport-local": "1.0.0"
  }
}
