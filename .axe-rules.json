{
  "name": "WellFlow Accessibility Rules Configuration",
  "description": "Axe-core accessibility rules for oil & gas production monitoring platform",
  "version": "1.0.0",

  "rules": {
    "accesskeys": { "enabled": true },
    "area-alt": { "enabled": true },
    "aria-allowed-attr": { "enabled": true },
    "aria-allowed-role": { "enabled": true },
    "aria-braille-equivalent": { "enabled": true },
    "aria-command-name": { "enabled": true },
    "aria-dialog-name": { "enabled": true },
    "aria-hidden-body": { "enabled": true },
    "aria-hidden-focus": { "enabled": true },
    "aria-input-field-name": { "enabled": true },
    "aria-meter-name": { "enabled": true },
    "aria-progressbar-name": { "enabled": true },
    "aria-required-attr": { "enabled": true },
    "aria-required-children": { "enabled": true },
    "aria-required-parent": { "enabled": true },
    "aria-roledescription": { "enabled": true },
    "aria-roles": { "enabled": true },
    "aria-toggle-field-name": { "enabled": true },
    "aria-tooltip-name": { "enabled": true },
    "aria-treeitem-name": { "enabled": true },
    "aria-valid-attr": { "enabled": true },
    "aria-valid-attr-value": { "enabled": true },
    "audio-caption": { "enabled": true },
    "autocomplete-valid": { "enabled": true },
    "avoid-inline-spacing": { "enabled": true },
    "blink": { "enabled": true },
    "button-name": { "enabled": true },
    "bypass": { "enabled": true },
    "color-contrast": {
      "enabled": true,
      "options": {
        "contrastRatio": {
          "normal": {
            "expected": 4.5
          },
          "large": {
            "expected": 3.0
          }
        },
        "ignoreUsecase": false,
        "ignorePseudo": false
      }
    },
    "color-contrast-enhanced": {
      "enabled": false,
      "tags": ["wcag2aaa"]
    },
    "css-orientation-lock": { "enabled": true },
    "definition-list": { "enabled": true },
    "dlitem": { "enabled": true },
    "document-title": { "enabled": true },
    "duplicate-id": { "enabled": true },
    "duplicate-id-active": { "enabled": true },
    "duplicate-id-aria": { "enabled": true },
    "empty-heading": { "enabled": true },
    "empty-table-header": { "enabled": true },
    "focus-order-semantics": { "enabled": true },
    "form-field-multiple-labels": { "enabled": true },
    "frame-focusable-content": { "enabled": true },
    "frame-title": { "enabled": true },
    "frame-title-unique": { "enabled": true },
    "heading-order": { "enabled": true },
    "hidden-content": { "enabled": false },
    "html-has-lang": { "enabled": true },
    "html-lang-valid": { "enabled": true },
    "html-xml-lang-mismatch": { "enabled": true },
    "image-alt": { "enabled": true },
    "image-redundant-alt": { "enabled": true },
    "input-button-name": { "enabled": true },
    "input-image-alt": { "enabled": true },
    "label": { "enabled": true },
    "label-content-name-mismatch": { "enabled": true },
    "label-title-only": { "enabled": true },
    "landmark-banner-is-top-level": { "enabled": true },
    "landmark-complementary-is-top-level": { "enabled": true },
    "landmark-contentinfo-is-top-level": { "enabled": true },
    "landmark-main-is-top-level": { "enabled": true },
    "landmark-no-duplicate-banner": { "enabled": true },
    "landmark-no-duplicate-contentinfo": { "enabled": true },
    "landmark-no-duplicate-main": { "enabled": true },
    "landmark-one-main": { "enabled": true },
    "landmark-unique": { "enabled": true },
    "link-in-text-block": { "enabled": true },
    "link-name": { "enabled": true },
    "list": { "enabled": true },
    "listitem": { "enabled": true },
    "marquee": { "enabled": true },
    "meta-refresh": { "enabled": true },
    "meta-viewport": { "enabled": true },
    "meta-viewport-large": { "enabled": true },
    "nested-interactive": { "enabled": true },
    "no-autoplay-audio": { "enabled": true },
    "object-alt": { "enabled": true },
    "p-as-heading": { "enabled": true },
    "page-has-heading-one": { "enabled": true },
    "presentation-role-conflict": { "enabled": true },
    "region": { "enabled": true },
    "role-img-alt": { "enabled": true },
    "scope-attr-valid": { "enabled": true },
    "scrollable-region-focusable": { "enabled": true },
    "select-name": { "enabled": true },
    "server-side-image-map": { "enabled": true },
    "svg-img-alt": { "enabled": true },
    "tabindex": { "enabled": true },
    "table-duplicate-name": { "enabled": true },
    "table-fake-caption": { "enabled": true },
    "td-has-header": { "enabled": true },
    "td-headers-attr": { "enabled": true },
    "th-has-data-cells": { "enabled": true },
    "valid-lang": { "enabled": true },
    "video-caption": { "enabled": true }
  },

  "tags": ["wcag2a", "wcag2aa", "wcag21aa", "section508", "best-practice"],

  "exclude": ["#skip-link", ".sr-only", "[data-testid]"],

  "include": ["main", "nav", "header", "footer", "aside", "section", "article"],

  "oil_gas_specific": {
    "description": "Oil & gas industry specific accessibility requirements",
    "requirements": {
      "field_operations": {
        "touch_targets": {
          "minimum_size": "44px",
          "description": "Minimum touch target size for field devices"
        },
        "high_contrast": {
          "enabled": true,
          "description": "High contrast mode for outdoor viewing conditions"
        },
        "keyboard_navigation": {
          "required": true,
          "description": "Full keyboard navigation for hands-free operation"
        }
      },
      "emergency_response": {
        "critical_alerts": {
          "high_visibility": true,
          "audio_support": true,
          "description": "Critical alerts must be highly visible and audible"
        },
        "simple_navigation": {
          "required": true,
          "description": "Simple, consistent navigation for high-stress situations"
        },
        "fast_loading": {
          "max_load_time": "3s",
          "description": "Critical content must load quickly"
        }
      },
      "regulatory_compliance": {
        "section_508": {
          "required": true,
          "description": "Federal accessibility standards compliance"
        },
        "wcag_2_1_aa": {
          "required": true,
          "description": "WCAG 2.1 AA compliance for international standards"
        },
        "ada_compliance": {
          "required": true,
          "description": "Americans with Disabilities Act compliance"
        }
      }
    }
  },

  "custom_checks": {
    "oil_gas_touch_targets": {
      "description": "Verify touch targets meet oil & gas field device requirements",
      "selector": "button, a, input, select, textarea, [role='button'], [role='link']",
      "minimum_size": 44
    },
    "critical_alert_accessibility": {
      "description": "Ensure critical alerts are accessible",
      "selector": "[data-alert-level='critical'], .alert-critical, .emergency-alert",
      "requirements": ["aria-live", "role", "aria-label"]
    },
    "production_data_tables": {
      "description": "Verify production data tables are accessible",
      "selector": "table[data-type='production'], .production-table",
      "requirements": ["caption", "th[scope]", "headers"]
    },
    "well_status_indicators": {
      "description": "Ensure well status indicators are accessible",
      "selector": ".well-status, [data-well-status]",
      "requirements": ["aria-label", "role", "color-contrast"]
    }
  },

  "reporting": {
    "format": "json",
    "include_passes": true,
    "include_incomplete": true,
    "output_dir": "accessibility-reports",
    "summary": true
  },

  "browser_config": {
    "chrome": {
      "args": ["--no-sandbox", "--disable-setuid-sandbox", "--disable-dev-shm-usage", "--disable-gpu"]
    }
  },

  "wcag_compliance": {
    "level": "AA",
    "version": "2.1",
    "guidelines": {
      "perceivable": {
        "text_alternatives": true,
        "time_based_media": true,
        "adaptable": true,
        "distinguishable": true
      },
      "operable": {
        "keyboard_accessible": true,
        "seizures_physical_reactions": true,
        "navigable": true,
        "input_modalities": true
      },
      "understandable": {
        "readable": true,
        "predictable": true,
        "input_assistance": true
      },
      "robust": {
        "compatible": true
      }
    }
  },

  "industry_standards": {
    "section_508": {
      "enabled": true,
      "version": "2018"
    },
    "ada": {
      "enabled": true,
      "title_ii": true,
      "title_iii": true
    },
    "en_301_549": {
      "enabled": true,
      "version": "3.2.1"
    }
  }
}
