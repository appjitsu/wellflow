{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,

    // === NEXT.JS SPECIFIC STRICT SETTINGS ===
    // Enhanced type safety for Next.js applications
    "checkJs": true,
    "incremental": true,

    // === JSX STRICT SETTINGS ===
    // Ensure type safety in React components
    "jsxImportSource": "react"
  }
}
