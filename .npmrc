# Security Configuration for WellFlow Oil & Gas Production Monitoring
# Enhanced security settings for critical infrastructure applications

# Audit Configuration
audit-level=moderate
fund=false

# Registry Security
registry=https://registry.npmjs.org/
strict-ssl=true

# Package Installation Security
package-lock=true
save-exact=true

# Dependency Resolution
prefer-offline=false
offline=false

# Security Reporting
audit-report-format=json

# Performance and Security
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Workspace Configuration
enable-pre-post-scripts=false
ignore-scripts=false

# Oil & Gas Compliance Settings
# Ensure all packages are from trusted sources
# Block packages with known security issues