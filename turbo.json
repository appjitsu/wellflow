{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "NODE_ENV",
        "NEXT_RUNTIME",
        "SENTRY_ORG",
        "SENTRY_PROJECT_WEB",
        "CI"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "**/*.spec.ts", "**/*.test.ts"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "**/*.spec.ts", "**/*.test.ts"]
    },
    "test:coverage:watch": {
      "cache": false,
      "persistent": true
    },
    "test:ci": {
      "dependsOn": ["^test:ci"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "**/*.spec.ts", "**/*.test.ts"]
    },
    "security:audit": {
      "dependsOn": ["^security:audit"],
      "inputs": ["package.json", "pnpm-lock.yaml"],
      "outputs": ["security-audit.json", "security-reports/**"]
    },
    "security:check": {
      "dependsOn": ["^security:check"],
      "inputs": ["package.json", "pnpm-lock.yaml", "src/**/*.ts", "src/**/*.tsx"],
      "outputs": ["security-audit.json", "security-reports/**"]
    },
    "security:test": {
      "dependsOn": ["^security:test"],
      "inputs": [
        "package.json",
        "pnpm-lock.yaml",
        "src/**/*.ts",
        "src/**/*.tsx",
        "eslint.config.*"
      ],
      "outputs": ["security-audit.json", "security-reports/**"]
    },
    "accessibility:test": {
      "dependsOn": ["^accessibility:test"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "app/**/*.tsx", "components/**/*.tsx"],
      "outputs": ["accessibility-*.json", "accessibility-reports/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
