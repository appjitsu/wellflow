#   git diff --cached --name-only | grep -E '\.(ts|tsx|js|jsx)$' | grep -v -E '\.(test|spec)\.(ts|tsx|js|jsx)$' | grep -v -E '(config|\.config)\.(ts|tsx|js|jsx)$' | xargs grep -l "TODO\|FIXME\|XXX" 2>/dev/null
