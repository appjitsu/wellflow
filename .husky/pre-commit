# Run lint-staged to format staged files
npx lint-staged

# Prevent commits with TODO comments in production code (excluding test files)
if git diff --cached --name-only | grep -E '\.(ts|tsx|js|jsx)$' | grep -v -E '\.(test|spec)\.(ts|tsx|js|jsx)$' | xargs grep -l "TODO\|FIXME\|XXX" 2>/dev/null; then
  echo "❌ Error: TODO/FIXME/XXX comments found in production code. Please resolve before committing."
  echo "Files with TODO comments:"
  git diff --cached --name-only | grep -E '\.(ts|tsx|js|jsx)$' | grep -v -E '\.(test|spec)\.(ts|tsx|js|jsx)$' | xargs grep -l "TODO\|FIXME\|XXX" 2>/dev/null
  exit 1
fi

echo "✅ Pre-commit checks passed!"
